<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FidelCardEditTextTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlActivated">#da0000</item>
        <item name="colorControlHighlight">#2eac2c</item>

        <item name="android:textSize">@dimen/fdl_card_form_card_font_size</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

    <style name="FidelExpiryEditTextTheme" parent="FidelCardEditTextTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="android:padding">0dp</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

    <style name="FidelCardFormCountry" parent="FidelCardEditTextTheme">
        <!-- Used for the bottom line when not selected / focused -->

        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>



    <style name="Divider">
        <item name="android:background">#969696</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_height">1px</item>
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1px</item>
    </style>

    <style name="FidelCardFormItemCaption" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/fdl_card_form_caption_font_size</item>
        <item name="android:textColor">#8e8e8e</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="FidelCardFormTOS" parent="FidelCardFormItemCaption">
        <item name="android:textSize">@dimen/fdl_card_form_tos_font_size</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="FidelCardFormTOSTerms" parent="FidelCardFormTOS">
        <item name="android:textSize">@dimen/fdl_card_form_tos_font_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>



    <style name="FidelCardFormInvalidItemCaption" parent="FidelCardFormItemCaption">
        <item name="android:textColor">#ff3b30</item>
    </style>

</resources>

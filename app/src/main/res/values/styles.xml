<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FidelCardEditTextTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlActivated">#da0000</item>
        <item name="colorControlHighlight">#2eac2c</item>

        <item name="android:textSize">@dimen/fdl_card_form_card_font_size</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

    <style name="Divider">
        <item name="android:background">#969696</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_height">1px</item>
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1px</item>
    </style>

    <style name="FidelCardFormItemCaption" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/fdl_card_form_caption_font_size</item>
        <item name="android:textColor">#8e8e8e</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>

</resources>
